<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_main_menu"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".MainActivity">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="425px"
                android:layout_height="518px"
                android:layout_gravity="center"
                android:layout_marginLeft="100dp"
                android:background="@drawable/mechanical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/openMechanical"
                    android:layout_width="425px"
                    android:layout_height="518px"
                    android:layout_gravity="center"
                    android:layout_marginLeft="0dp"
                    android:padding="0dp"
                    android:src="@drawable/menu_mechanical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="433px"
                android:layout_height="510px"
                android:layout_gravity="center"
                android:layout_marginLeft="250dp"
                android:background="@drawable/mechanical"
                android:orientation="horizontal"
                android:padding="0dp">

                <ImageView
                    android:id="@+id/openMusic"
                    android:layout_width="435px"
                    android:layout_height="512px"
                    android:padding="0dp"
                    android:src="@drawable/menu_music" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="432px"
                android:layout_height="510px"
                android:layout_gravity="center"
                android:layout_marginLeft="250dp"
                android:orientation="horizontal"
                android:padding="0dp">

                <ImageView
                    android:id="@+id/openProject"
                    android:layout_width="434px"
                    android:layout_height="512px"
                    android:padding="0dp"
                    android:src="@drawable/program_icon1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="419px"
                android:layout_height="503px"
                android:layout_gravity="center"
                android:layout_marginLeft="250dp"
                android:layout_marginRight="100dp"
                android:background="@drawable/mechanical"
                android:orientation="horizontal"
                android:padding="0dp">

                <ImageView
                    android:id="@+id/openControl"
                    android:layout_width="417px"
                    android:layout_height="505px"
                    android:padding="0dp"
                    android:src="@drawable/menu_control" />
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>