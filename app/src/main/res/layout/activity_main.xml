<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_header">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation ="vertical"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:id="@+id/layout_line1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/line2"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_line2" />
            <TextView
                android:id="@+id/logo"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/ic_logo" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:id="@id/line1"
                android:background="@drawable/ic_line1" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_header"
        android:orientation="horizontal"
        android:stretchColumns="1,1"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <LinearLayout
            android:id="@+id/layoutLeft"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/ic_menu_bg">
            <!--- ____________Start layout Mechanical________-->
            <ImageButton
                android:id="@+id/btn_mechanical"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/ic_mechanical"/>
            <!--- ____________Start layout Programming________-->
            <ImageButton
                android:id="@+id/btn_play"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/ic_play"/>
        <!--- ____________Start layout Guidle________-->
            <ImageButton
                android:id="@+id/btn_guidle"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/ic_guidle"/>
            <!--- ____________Start layout Control________-->
            <ImageButton
                android:id="@+id/btn_program"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/ic_program"/>
        <!--- ____________Start layout Exit________-->
            <ImageButton
                android:id="@+id/btn_exit"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/ic_btn_exit"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutRight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/layoutLeft"
            android:orientation="horizontal"
            android:layout_marginRight="50dp"
            android:background="@drawable/ranzer_robot">
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>