<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_mechanical"
        tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/back_icon"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="425px"
                android:layout_height="518px"
                android:id="@+id/ranger_layout"
                android:layout_gravity="center"
                android:layout_marginLeft="100dp"
                android:background="@drawable/mechanical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ranger_mechanical"
                    android:layout_width="425px"
                    android:layout_height="378px"
                    android:layout_gravity="center"
                    android:layout_marginLeft="0dp"
                    android:padding="0dp"
                    android:src="@drawable/ranzer" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="433px"
                android:layout_height="510px"
                android:id="@+id/mini_layout"
                android:layout_gravity="center"
                android:layout_marginLeft="250dp"
                android:background="@drawable/mechanical"
                android:orientation="horizontal"
                android:padding="0dp">

                <ImageView
                    android:id="@+id/mini_mechanical"
                    android:layout_width="435px"
                    android:layout_height="512px"
                    android:padding="0dp"
                    android:src="@drawable/ranzer" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="433px"
                android:layout_height="510px"
                android:id="@+id/mini_layout2"
                android:layout_gravity="center"
                android:layout_marginLeft="250dp"
                android:background="@drawable/mechanical"
                android:orientation="horizontal"
                android:padding="0dp">

                <ImageView
                    android:id="@+id/mini_mechanical2"
                    android:layout_width="435px"
                    android:layout_height="512px"
                    android:padding="0dp"
                    android:src="@drawable/ranzer" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>